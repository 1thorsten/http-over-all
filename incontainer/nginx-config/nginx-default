##
# You should look at the following URL's in order to grasp a solid understanding
# of Nginx configuration files in order to fully unleash the power of Nginx.
# https://www.nginx.com/resources/wiki/start/
# https://www.nginx.com/resources/wiki/start/topics/tutorials/config_pitfalls/
# https://wiki.debian.org/Nginx/DirectoryStructure
#
# Please see /usr/share/doc/nginx-doc/examples/ for more detailed examples.
##

server {
    listen 80 default_server;

    listen 443 ssl;
    http2 on;

    server_name http-over-all.de;
    
    root /var/www/html;

    default_type text/plain;
    charset   utf-8;

    server_name http-over-all;
    disable_symlinks off;

    # Add index.php to the list if you are using PHP
    index index.php index.html index.htm index.nginx-debian.html;

    location = / {
        access_log  off;
        error_log   off;

        # CORS Headers f√ºr alle Requests
        add_header Access-Control-Allow-Origin "*" always;
        add_header Access-Control-Allow-Methods "GET, POST, OPTIONS" always;
        add_header Access-Control-Allow-Headers "x-raw, Content-Type, Accept, Origin" always;

        if ($request_method = OPTIONS ) {
            add_header Content-Length 0;
            add_header Content-Type text/plain;

            return 200;
        }

       if ($arg_raw != "true") {
            return 301 /f/;
       }

        autoindex on;
    }


    location = /robots.txt {
       add_header Content-Type text/plain;
       return 200 "User-agent: *\nDisallow: /\n";
    }

    # stop finder's garbage
    location ~ \.(_.*|DS_Store|Spotlight-V100|TemporaryItems|Trashes|hidden|localized)$ {
        access_log  off;
        error_log   off;

        if ($request_method = PUT) {
            return 403;
        }
        return 404;
    }

    location ~ \.metadata_never_index$ {
        return 200 "Don't index this drive!";
    }

    location /func/nginx_status {
        access_by_lua_block {
            local xff = ngx.req.get_headers()["X-Forwarded-For"]
            if xff ~= "127.0.0.1" then
                return ngx.exit(ngx.HTTP_FORBIDDEN)
            end
        }

        allow 127.0.0.1;
        deny all;

        stub_status;
    }

    # return ip address from the requestor
    location /func/remote-ip {
        default_type	text/plain;
        add_header	X-Remote-Addr $remote_addr;
        add_header	X-Forwarded-For $http_x_forwarded_for;
        add_header  X-Release "__RELEASE__";
        return	200	$real_remote_addr;
    }

    location /func/show-headers {
        set_by_lua_block $request_info {
            local lines = {}

            -- Request Headers
            local req_headers = ngx.req.get_headers()
            local req_keys = {}
            for k in pairs(req_headers) do
                table.insert(req_keys, k)
            end
            table.sort(req_keys)

            table.insert(lines, "--- Request Headers ---")
            for _, k in ipairs(req_keys) do
                local v = req_headers[k]
                if type(v) == "table" then
                    v = table.concat(v, ", ")
                end
                table.insert(lines, string.format("%s: %s", k, v))
            end

            -- Nginx Variables (a selected subset)
            local var_keys = {
                "remote_addr", "remote_user", "request", "request_uri", "request_method",
                "server_protocol", "host", "http_user_agent", "http_cookie", "http_referer"
            }
            table.sort(var_keys)

            table.insert(lines, "\n--- Nginx Variables ---")
            for _, k in ipairs(var_keys) do
                local v = ngx.var[k] or "-"
                table.insert(lines, string.format("%s: %s", k, v))
            end

            return table.concat(lines, "\n")
        }

        return 200 $request_info;
    }

    # return base64 encoded encrypted message (key ip address and crypt-key)
    location /func/encrypt-msg {
        default_type	text/plain;
        add_header	X-Remote-Addr $remote_addr;
        add_header	X-Forwarded-For $http_x_forwarded_for;
        proxy_pass http://127.0.0.1/php/func_encrypt-msg.php?remote_addr=$real_remote_addr&$args;
    }

    # return decrypted message (key ip address and crypt-key)
    location /func/decrypt-msg {
        default_type	text/plain;
        add_header	X-Remote-Addr $remote_addr;
        add_header	X-Forwarded-For $http_x_forwarded_for;
        proxy_pass http://127.0.0.1/php/func_decrypt-msg.php?remote_addr=$real_remote_addr&$args;
    }

    location /func/encrypt-link {
        default_type	text/plain;
        add_header	X-Remote-Addr $remote_addr;
        add_header	X-Forwarded-For $http_x_forwarded_for;
        proxy_pass http://127.0.0.1/php/encrypt.php?remote_addr=$real_remote_addr&$args;
    }

    location = /dav/ {
        root /var/www;
        client_max_body_size 2000M;
        
        client_body_temp_path /tmp/dav_tmp;
        dav_methods     PUT DELETE MKCOL COPY MOVE;
        dav_ext_methods   PROPFIND OPTIONS LOCK UNLOCK;
        dav_ext_lock zone=sds;
        create_full_put_path  on;
        dav_access    user:rw group:rw all:rw;
        autoindex     on;
        add_header DAV "1,2";
        add_header MS-Author-Via "DAV";

        satisfy all;    

        allow all;

        # auth_basic "restricted";
        # auth_basic_user_file /etc/nginx/htpasswd;
    }

    # pass PHP scripts to FastCGI server
    location ~* /php/..*.php$ {
        alias /scripts;
        fastcgi_pass unix:__PHP_SOCK__;
        
        fastcgi_index index.php;
        fastcgi_buffering off;
        fastcgi_read_timeout 300s;
        fastcgi_send_timeout 300s;
        include fastcgi.conf;
    }

    # Frontend unter /f
    location /f {
        alias /scripts/react-dist;
        try_files $uri $uri/ /f/index.html;
        add_header Cache-Control "no-store, no-cache, must-revalidate, proxy-revalidate, max-age=0";
    }

    location /decrypt/ {
        rewrite_by_lua_block {
            ngx.req.set_uri(ngx.escape_uri(ngx.var.uri));
        }

        # rewrite ^/decrypt/(.*)/(.*)/ $scheme://$http_host/php/decrypt.php?v=$2&f=$1;
        proxy_pass http://127.0.0.1/php/decrypt.php?uri=$uri&remote_addr=$remote_addr;
        add_header 'Access-Control-Allow-Origin' '*' always;
    }

    location /decrypt-link/ {
        rewrite_by_lua_block {
            ngx.req.set_uri(ngx.escape_uri(ngx.var.uri));
        }

        # rewrite ^/decrypt/(.*)/(.*)/ $scheme://$http_host/php/decrypt.php?v=$2&f=$1;
        proxy_pass http://127.0.0.1/php/decrypt-link.php?uri=$uri&remote_addr=$remote_addr;
    }

    location ~ ^/force-update(/.*)?$ {
        rewrite_by_lua_block {
            ngx.req.set_uri(ngx.escape_uri(ngx.var.uri));
        }

        # rewrite ^/decrypt/(.*)/(.*)/ $scheme://$http_host/php/decrypt.php?v=$2&f=$1;
        proxy_pass http://127.0.0.1/php/force-update.php?uri=$uri&remote_addr=$remote_addr;
    }

    location = /favicon.ico {
        alias /scripts/nginx-config/favicon.ico;
        log_not_found off;
        access_log off;
    }

   include /etc/nginx/http-over-all/*.conf;
}
